{{#partial "content"}}

    {{#if editHero}}
        <h1>Edit this Hero!</h1>
            <form action = '/hero/{{editHero.id}}' method='post'>

                      <label for="name">Name</label>
                      <input id="name" name="name" type="text"  class="form-control" value="{{editHero.name}}">
                      <br>
                      <label for="age">Age</label>
                      <input id="age" name="age" type="text"  class="form-control" value="{{editHero.age}}">
                      <br>
                      <label for="powers">Powers</label>
                      <input id="powers" name="powers" type="text"  class="form-control" value="{{editHero.powers}}">
                       <br>
                      <label for="weakness">Weakness</label>
                      <input id="weakness" name="weakness" type="text"  class="form-control" value="{{editHero.weakness}}">
                      <br>



    {{else}}
    <h1>Add a new Hero</h1>
             <form action = '/hero/{{editHero.id}}' method='post'>

                                  <label for="name">Name</label>
                                  <input id="name" name="name" type="text"  class="form-control" value="{{editHero.name}}">
                                  <br>
                                  <label for="age">Age</label>
                                  <input id="age" name="age" type="text"  class="form-control" value="{{editHero.age}}">
                                  <br>
                                  <label for="powers">Powers</label>
                                  <input id="powers" name="powers" type="text"  class="form-control" value="{{editHero.powers}}">
                                   <br>
                                  <label for="weakness">Weakness</label>
                                  <input id="weakness" name="weakness" type="text"  class="form-control" value="{{editHero.weakness}}">
                                  <br>


    {{/if}}
         <button type="submit" class="btn btn-default">Attack!!</button>
    </form>
{{/partial}}

