{{#partial "content"}}
<p>HERO DETAILS</p>
   <h5>Name :</h5>
   <p>{{ hero.name }}</p>
   <h5>Age :</h5>
   <p>{{ hero.age }}</p>
   <h5>Weakness:</h5>
   <p> Hero weakness is {{ hero.weakness }}</p>
   <h5>Powers:</h5>
   <p>Hero's special power is {{ hero.specialPower }}</p>

    <p>
        {{#if hero.isCreated }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}

        <a href="/hero/{{hero.id}}/update">Edit this task</a><br>
        <a href="/hero/{{hero.id}}/delete">DELETE this task (no undo)</a>
    </p>

{{/partial}}

{{> layout.hbs}}
