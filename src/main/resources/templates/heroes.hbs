{{#partial "content"}}
    {{#if heroes}}
        <ul>
            {{#each heroes}}
                <li class="card col-lg-6">
                    <h3 class="card-title" id="hero">Name:{{name}}</h3>
                    <a href="/heroes/{{id}}" class="btn btn-outline-warning">Details</a>
                    <a href="/squads/{{squadId}}" class="btn btn-outline-success">View squad</a>
                </li>
                <br><br>

            {{/each}}
        </ul>

        {{else}}
        <div class="card col-lg-8">
            <img src="https://images.pexels.com/photos/709732/pexels-photo-709732.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" class="card-img-top">
            <p class="card-text" id="squad" style="font-size: 22px">You have no heroes yet!!</p>
        </div>
        <br><br>
    {{/if}}
    <a href="/heroes/new" class="btn btn-lg btn-outline-primary col-md-5">Create heroes</a>

{{/partial}}

{{> layout.hbs}}
